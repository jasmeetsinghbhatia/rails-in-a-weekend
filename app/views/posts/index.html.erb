<% content_for :page_title, "All posts" %>

<section class="section">
  <div class="container">
    <% @post.each do |post| %>
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4">
                <%= link_to post.title, post %>
              </p>
            </div>
            <!-- Right Side edit/delete buttons-->
            <div class="level-right">
              <p class="level-item">
                <%= link_to "Edit", edit_post_path(post), class: "button is-light is-small" %>
              </p>
              <p class="level-item">
                <%= link_to "Delete", post_path(post), method: :delete, data: {confirm: "Are you sure?"}, class: "button is-danger is-small" %>
              </p>
            </div>
          </div>
          <div class="content">
            <%= post.content %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>