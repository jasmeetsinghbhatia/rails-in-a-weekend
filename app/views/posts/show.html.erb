<% content_for :page_title, @post.title %>

<section class="section">
  <div class="container">
    <nav class="level">
      <!-- Left Side-->
      <div class="level-left">
        <p class="level-item">
          <strong></strong>
        </p>
      </div>

      <!-- Right Side-->
      <div class="level-right">
        <p class="level-item">
          <%= link_to "Edit", edit_post_path(@post), class: "button is-light" %>
        </p>
        <p class="level-item">
          <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, class: "button is-danger" %>
        </p>
      </div>
    </nav>
    <hr/>
    <div class="content">
      <%= @post.content %>
    </div>
    <hr/>
  </div>
</section>
<section class="section">
  <div class="container">
    <p class="content">
      This section is for comments
    </p>
  </div>
</section>