<dev class="section hero is-light">
  <%= simple_form_for @user do |f| %>
    <div class="field">
      <div class="control">
        <%= f.input :name, input_html: {class: 'input'}, wrapper: false, label_html: {class: 'label'} %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.input :email, input_html: {class: 'input'}, wrapper: false, label_html: {class: 'label'} %>
      </div>
    </div>
    <%= f.button :submit, class: "button is-danger" %>
    <%= link_to 'Back', :back, class: "button is-primary" %>
  <% end %>
</dev>
